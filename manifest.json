{
  "manifest_version": 3,
  "name": "Stealth AI Interview Assistant â€“ Gemini Pro Edition",
  "version": "1.0.0",
  "description": "AI-powered interview assistant that listens to questions and provides answers via clipboard",
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "clipboardWrite",
    "tabs",
    "tabCapture",
    "audioCapture"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Stealth AI Interview Assistant"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Toggle voice listening"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["payment.html", "payment.js", "payment.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 